<!DOCTYPE html>
<html lang="es">
  <%- include('partials/head',{
    title : 'Registrate'
  }) %>
  <body>
    <%- include('partials/headerNavbar') %>

    <div class="container products-wrapper">
      <div class="row">
        <div class="col-12">
          <h2 class="products-title">Registrate</h2>
        </div>
          <div class="col-12">
                <form id="register" action="" method="POST">

                  <div class="row product-detail">

                      <div class="col-12 col-md-6">
                        <label for="name" class="form-label">Nombre</label>
                        <input type="text"
                        class="form-input" 
                        value="<%= locals.old && old.name ? old.name : null %>"
                        id="name"  name="name" title="El nombre debe tener m치s de dos caracteres"/>
                        <span id="errorNombre" class="text-danger"><%= locals.errors && errors.name ? errors.name.msg : null %> </span>
                      </div>
                      <div class="col-12 col-md-6">
                        <label for="surname" class="form-label">Apellido</label>
                        <input type="text"
                        value="<%= locals.old && old.surname ? old.surname : null %>"
                        class="form-input"
                        id="surname" name="surname" title="El apellido debe tener m치s de dos caracteres"/>
                        <small id="errorApellido" class="text-danger"><%= locals.errors && errors.surname ? errors.surname.msg : null %></small>
                      </div>
                      <div class="col-12 col-md-6">
                        <label for="email" class="form-label">Email</label>
                        <input type="email"
                        value="<%= locals.old && old.email ? old.email : null %>"
                        class="form-input"
                        id="email" name="email"/>
                        <small id="errorEmail" class="text-danger"><%= locals.errors && errors.email ? errors.email.msg : null %></small>
                      </div>
                    <div class="col-12 col-md-6">
                        <label for="pass" class="form-label">Contrase침a</label>
                        <input type="password"
                        class="form-input" name="pass"/>
                        <small id="errorPass" class="text-danger"><%= locals.errors && errors.pass ? errors.pass.msg : null %></small>
                      </div>

                      <div class="col-12 col-md-6">
                        <label for="pass2" class="form-label">Reingresar contrase침a</label>
                        <input type="password"
                        class="form-input"
                        id="pass2" name="pass2"/>
                        <small id="errorPass2" class= "text-danger"><%= locals.errors && errors.pass2 ? errors.pass2.msg : null %></small>

                      </div>
                      <div class="col-12 col-md-6">
                      <div class="d-flex justify-content-around align-items-end mt-5">
                        <div class="form-check ">
                          <input name="bases" class="form-check-input" type="checkbox" value="" id="flexCheckDefault" style="width:30px; height:30px;">
                          <label class="form-check-label form-label ms-2" for="flexCheckDefault">
                            Acepto las bases y condiciones
                          </label>
                        </div>
                        <small id="errorBases" class= "text-danger"><%= locals.errors && errors.bases ? errors.bases.msg : null %></small>

                        <button type="submit" class="buy-now-button">
                          Registrarse
                        </button>
                      </div>
                       
                        </div>
                       

                    </div>
                    
                      </div>
                        <div class="col-12 col-lg-6">
                          <span id="msgError" class="text-danger"></span>

                         
                        </div>

                      </div>

                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>

    <%- include('partials/footer') %>
  </body>
</html>
