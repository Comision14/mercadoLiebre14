<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Formulario de creación' }) %>

	<body>
		<!-- Header -->
		<%- include('partials/headerNavbar') %>
			<!-- /Header -->

			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Formulario de creación de productos</h2>
					</div>
				<div class="col-12">
					<form method="POST" enctype="multipart/form-data">
						<div class="row product-detail">
							<div class="col-12">
								<div class="row">
									<div class="col-12 col-md-6">
										<label for="title" class="form-label">Nombre del producto:</label>
										<input type="text" id="title" name="title" placeholder="Ej: Zapatillas Reebok"
											class="form-input">
									</div>
									<div class="col-12 col-md-6 col-lg-3">
										<label for="price" class="form-label">Precio del producto:</label>
										<input type="number" id="price" name="price" placeholder="Ej: 5678"
											class="form-input">
									</div>
									<div class="col-12 col-md-6 col-lg-3">
										<label for="discount" class="form-label">Descuento:</label>
										<input type="number" id="discount" name="discount" placeholder="Ej: 15"
											class="form-input">
									</div>
									<div class="col-12 col-md-6 col-lg-4">
										<label for="categoryId" class="form-label">Categoría:</label>
										<select name="categoryId" id="categoryId" class="form-input">
											<option value="" hidden selected>Elegí</option>
											<% categories.forEach(category => { %>
												<option value="<%= category.id %>"><%= category.name %> </option>
											<% }) %>
										</select>
									</div>
									<div class="col-12 col-lg-8">
										<label for="description" class="form-label">Descripción:</label>
										<textarea rows="1" name="description" id="description" class="form-input"
											style="resize: none;"></textarea>
									</div>
									<div class="col-12">
										<div class="row">
											<div class="col-12 col-md-4">
												<div style="width: 100%; height: 200px; border: solid 1px grey; border-radius: 8px;">
													<img src="" alt="">
												</div>
												<label for="images1" class="buy-now-button mt-3">Agregar imágen</label>
												<input type="file" id="images1" name="images" accept="image/*" hidden>
											</div>
											<div class="col-12 col-md-4">
												<div style="width: 100%; height: 200px; border: solid 1px grey; border-radius: 8px;">
													<img src="" alt="">
												</div>
												<label for="images2" class="buy-now-button mt-3">Agregar imágen</label>
												<input type="file" id="images2" name="images" accept="image/*" hidden>
											</div>
											<div class="col-12 col-md-4">
												<div style="width: 100%; height: 200px; border: solid 1px grey; border-radius: 8px;">
													<img src="" alt="">
												</div>
												<label for="images3" class="buy-now-button mt-3">Agregar imágen</label>
												<input type="file" id="images3" name="images" accept="image/*" hidden>
											</div>
										</div>
				
									</div>
									<div class="col-12">
										<button type="submit" class="buy-now-button" style="width: 100%;">Guardar
											producto</button>
									</div>

								</div>

							</div>
						</div>
				</div>

			</div>
			</form>
			</div>

			<!-- /todos los productos -->

			<!-- footer -->
			<%- include('partials/footer') %>
				<!-- /footer -->
				<script>
					document.getElementById('image').addEventListener('change', (e) => {
						let reader = new FileReader();
						reader.readAsDataURL(e.target.files[0])
						reader.onload = () => {
							document.getElementById('imgPreview').src = reader.result
						}
					})
				</script>
	</body>

</html>